@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [AllowAnonymous]

            
    <RemoteAuthenticatorView Action="@Action">

        <LoggingIn>
            <HxSpinner Color="ThemeColor.Primary" Size="SpinnerSize.Small" />
            Přihlašování
        </LoggingIn>

        <CompletingLoggingIn>
            <HxSpinner Color="ThemeColor.Primary" Size="SpinnerSize.Small" />
            Dokončování přihlašování
        </CompletingLoggingIn>

        <LogInFailed>
            Přihlášení se nezdařilo
        </LogInFailed>

        <LogOut>
            <HxSpinner Color="ThemeColor.Primary" Size="SpinnerSize.Small" />
            Odhlašování
        </LogOut>

        <CompletingLogOut>
            Dokončování odhlašování
        </CompletingLogOut>

        <LogOutFailed>
            Odhlášení se nezdařilo
        </LogOutFailed>

        <LogOutSucceeded>
            Odhlášení bylo úspěšné
        </LogOutSucceeded>

        <UserProfile>
            <HxSpinner Color="ThemeColor.Primary" Size="SpinnerSize.Small" />
            Zpracovávání uživatelského profilu
        </UserProfile>

        <Registering>
            <HxSpinner Color="ThemeColor.Primary" Size="SpinnerSize.Small" />
            Registrování
        </Registering>
    </RemoteAuthenticatorView>

    @code{
        [Parameter] public string Action { get; set; }
    }
